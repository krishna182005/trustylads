{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://backend-91cb.onrender.com/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "https://backend-91cb.onrender.com/auth/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
